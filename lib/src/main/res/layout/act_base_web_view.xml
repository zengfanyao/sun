<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rbMenue"/>


    <RadioGroup
        android:id="@+id/rbMenue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/rbt_home"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="首页"
            android:paddingTop="3dp"
            android:drawableTop="@mipmap/ic_white_home"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />


        <RadioButton
            android:id="@+id/rbt_back"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="后退"
            android:paddingTop="3dp"
            android:drawableTop="@mipmap/ic_white_back"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbt_go"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="前进"
            android:paddingTop="3dp"
            android:drawableTop="@mipmap/ic_white_go"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbt_refresh"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="刷新"
            android:paddingTop="3dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:drawableTop="@mipmap/ic_white_refresh"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/rbt_clear"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="清除缓存"
            android:paddingTop="3dp"
            android:drawableTop="@mipmap/ic_white_clear"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RadioGroup>

</RelativeLayout>